<% if @restaurant.errors.any? %>
<section id="errors">
    <h2>
        <%= pluralize(@restaurant.errors.count, "error") %>
        prohibited this restaurant from being saved:
    </h2>
    <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</section>
<% end %>

<%= form_for @restaurant, html: {multipart: true, style:"padding:30px;"}, class:"form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :name, class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :name, class:"form-control"%><br>
    </div>
  </div>
  <div class="form-group">
    <label for="image" class="col-sm-2 control-label">Upload Pictures</label>
    <div class="col-sm-10">
      <%= f.file_field :image, class:"form-control" %><br>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Create Restaurant", class: "btn btn-success"%>
    </div>
  </div>
<% end %>
