<%= form_for @restaurant, html: {multipart: true, style:"padding:30px;"}, class:"form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :name, class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :name, class:"form-control", placeholder:"Edit the name..."%><br>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_area :description, class:"form-control", placeholder:"Enter a description..."%><br>
    </div>
  </div>
  <div class="form-group">
    <label for="image" class="col-sm-2 control-label">Upload Pictures</label>
    <div class="col-sm-10">
      <%= f.file_field :image, class:"form-control" %><br>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Update Restaurant", class: "btn btn-success"%>
    </div>
  </div>
<% end %>
